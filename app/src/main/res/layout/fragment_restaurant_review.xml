<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_margin="7dp">

        <TextView
            android:id="@+id/rest_review_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/rest_review_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toStartOf="@+id/rest_review_rate"
            android:layout_toLeftOf="@+id/rest_review_rate"
            android:layout_margin="10dp"
            android:textSize="6pt"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/rest_review_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rest_review_date"
            android:layout_alignParentLeft="true"
            android:layout_margin="12dp"
            android:textAppearance="?attr/textAppearanceListItem" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/rest_review_comment"
            android:background="#c0c0c0"/>

    </RelativeLayout>

</LinearLayout>
