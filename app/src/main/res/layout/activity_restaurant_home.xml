<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_restaurant_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.unifood.activities.RestaurantHomeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/restaurant_pic"
            android:src="@drawable/common_plus_signin_btn_text_dark_normal"/>

        <TabHost
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/restaurantHome_host_bar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/home_Tab1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <fragment
                            android:name="com.example.unifood.fragments.RestaurantProfileFragment"
                            android:id="@+id/home_restaurant_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:layout="@layout/fragment_restaurant_profile"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_tab2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <fragment
                            android:name="com.example.unifood.fragments.RestaurantProductFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/home_restaurant_products"
                            tools:layout="@layout/fragment_restaurant_product_list" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_tab3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <fragment
                            android:name="com.example.unifood.fragments.RestaurantReviewFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/home_restaurant_reviews"
                            tools:layout="@layout/fragment_restaurant_review_list" />

                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </TabHost>

    </LinearLayout>

</RelativeLayout>
